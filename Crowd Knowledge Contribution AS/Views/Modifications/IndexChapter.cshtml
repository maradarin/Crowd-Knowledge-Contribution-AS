
@{
    ViewBag.Title = "IndexChapter";
}

    <head>
        <link rel="stylesheet" href="~/Content/modifchapterstyle.css">
    </head>

<h2>Index</h2>
<br />
@foreach (var modification in ViewBag.ModificationsTitle)
{
    <h3 class="dateuser">Chapter Title: @modification.OldInfo -> @modification.NewInfo</h3>
    <form method="post" action="/Modifications/Delete/@modification.ModificationId">
        @Html.HttpMethodOverride(HttpVerbs.Delete)
        <button type="submit" class="ilink">Restituie modificare</button>
    </form>

    <br />
}

@foreach (var modification in ViewBag.ModificationsContent)
{
    <div class="dateuser">
        <h3 >Chapter Content modifications: </h3>
        <h3>&#10148;Before modifications: </h3>
        @modification.OldInfo
        <h3>&#10148;After modifications: </h3>
        @modification.NewInfo
    </div>
    <form method="post" action="/Modifications/Delete/@modification.ModificationId">
        @Html.HttpMethodOverride(HttpVerbs.Delete)
        <button type="submit" class="ilink">Restituie modificare</button>
    </form>

    <br />
}