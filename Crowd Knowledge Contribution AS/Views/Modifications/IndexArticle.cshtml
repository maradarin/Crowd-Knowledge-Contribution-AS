@{
    ViewBag.Title = "IndexArticle";
}

<head>
    <link rel="stylesheet" href="~/Content/modifchapterstyle.css">
</head>

<h1>ceva</h1>
@foreach (var modification in ViewBag.Modifications)
{
<div class="dateuser" style="width:40%;border:none;">
    <h3>Article modifications: </h3>
    <h3>&#10148;Before modifications: </h3>
    @modification.OldInfo
    <h3>&#10148;After modifications: </h3>
    @modification.NewInfo
</div>
        <form method="post" action="/Modifications/Delete/@modification.ModificationId">
            @Html.HttpMethodOverride(HttpVerbs.Delete)
            <button type="submit" class="ilink">Restituie modificare</button>
        </form>

        <br />
    
}