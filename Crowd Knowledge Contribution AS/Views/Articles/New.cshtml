@model Crowd_Knowledge_Contribution.Models.Article

@{
    ViewBag.Titlu = "New";
}
    <head>
        <link rel="stylesheet" href="~/Content/articleeditstyle.css">
    </head>
<h2>New</h2>
<div class="eform">
    <div class="eformcontent">
        @using (Html.BeginForm(actionName: "New", controllerName: "Articles"))
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <!--label>Titlu articol</label-->
        <div class="etxt">
            @Html.Label("ArticleTitle", "Titlu articol")
        </div>
                    <!--click pe titlu articol -> focus pe textbox pt ca avem acelasi id (Title)-->
                    <!--input type="text" name="Title" /-->
                    @Html.TextBox("ArticleTitle", null, new { @class = "form-control" })
                    <!--nume din baza de date, valori implicite, proprietati de css-->
                    <br />
                    @Html.ValidationMessageFor(m => m.ArticleTitle, null, new { @class = "text-danger" })
                    <br /><br />


                    <label class="etxt">Selectati categoria</label>
                    <br/>
                    @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
                    "Selectati categoria", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
                    <br />
                    <br />
                    <button class="emodif" type="submit">Adauga articol</button>
                    }
                </div>
</div>